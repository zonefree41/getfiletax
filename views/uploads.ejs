<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Client Uploaded Files</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f8fafc;
            color: #0f172a;
            margin: 40px;
        }

        h1 {
            color: #0a4b9b;
            font-size: 26px;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        th,
        td {
            padding: 12px 16px;
            border-bottom: 1px solid #e5e7eb;
            text-align: left;
        }

        th {
            background: #0a4b9b;
            color: white;
        }

        tr:hover {
            background: #f1f5f9;
        }

        a {
            color: #0ea5a4;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .no-files {
            color: #6b7280;
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <h1>Uploaded Client Documents</h1>

    <% if (files.length===0) { %>
        <p class="no-files">No uploaded files yet.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>View / Download</th>
                    </tr>
                </thead>
                <tbody>
                    <% files.forEach(file=> { %>
                        <tr>
                            <td>
                                <%= file %>
                            </td>
                            <td><a href="/uploads/<%= file %>" target="_blank">Open</a></td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } %>
</body>

</html>