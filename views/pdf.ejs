<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uploaded Tax Documents</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f9fafb;
            padding: 40px;
        }

        h1 {
            color: #222;
            text-align: center;
        }

        .pdf-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .pdf-card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .pdf-card a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }

        iframe {
            width: 100%;
            height: 400px;
            border: none;
            border-radius: 8px;
        }
    </style>
</head>

<body>
    <h1>Client Uploaded Tax Documents</h1>

    <div class="pdf-list">
        <% files.forEach(file=> { %>
            <div class="pdf-card">
                <h3>
                    <%= file %>
                </h3>
                <iframe src="/uploads/<%= file %>" title="<%= file %>"></iframe>
                <br><br>
                <a href="/uploads/<%= file %>" target="_blank">Open Full View</a>
            </div>
            <% }) %>
    </div>
</body>

</html>